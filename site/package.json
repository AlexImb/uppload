{
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile && npm run build-site",
    "build-site": "node dist/build.js",
    "watch": "onchange 'content/**/*.*' -- npm run build-site",
    "watch-prettier": "onchange '*.{html,scss,ts,json}' -- prettier --write {{changed}}",
    "watch-compile": "onchange 'build.ts' -- npm run compile",
    "serve": "live-server public --quiet",
    "start": "concurrently 'npm run watch' 'npm run watch-prettier' 'npm run watch-compile' 'npm run serve'"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/html-minifier": "^3.5.3",
    "@types/marked": "^0.6.5",
    "@types/node": "^12.6.3",
    "@types/recursive-readdir": "^2.2.0",
    "@types/sass": "^1.16.0",
    "axios": "^0.19.0",
    "concurrently": "^4.1.1",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "marked": "^0.7.0",
    "onchange": "^6.0.0",
    "prettier": "^1.18.2",
    "sass": "^1.22.5",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "recursive-readdir": "^2.2.2"
  }
}
