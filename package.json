{
  "name": "uppload",
  "version": "2.0.0-beta.18",
  "description": "Uppload is a JavaScript widget for better file uploading on the web.",
  "keywords": [
    "uppload",
    "typescript",
    "css",
    "scss",
    "el nino",
    "file upload",
    "image upload",
    "crop",
    "uploader",
    "upload",
    "javascript"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": "https://github.com/elninotech/uppload",
  "homepage": "https://uppload.js.org",
  "author": "El Ni√±o <https://elnino.tech>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-package && node scripts/build-scss.js",
    "test": "jest",
    "build-package": "gulp build",
    "build-site": "site",
    "build-demo": "parcel build demo/index.html",
    "demo": "parcel demo/index.html",
    "lint": "prettier '**/*.{ts,scss}' --write",
    "serve-site": "site --serve",
    "test-report": "jest --coverage",
    "changelog": "gitmoji-changelog",
    "build-site-demo": "npm run build-site && npm run build-demo && node scripts/build-demo.js",
    "build-typedoc": "typedoc --out public/typedoc src"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^2.0.1",
    "@staart/site": "^1.11.1",
    "@types/jest": "^24.0.23",
    "auto-i18n": "^1.0.0",
    "coveralls": "^3.0.9",
    "cssnano": "^4.1.10",
    "gitmoji-changelog": "^2.0.1",
    "gulp": "^4.0.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
    "rollup": "^1.27.13",
    "sass": "^1.23.7",
    "ts-jest": "^24.2.0",
    "tslib": "^1.10.0",
    "typedoc": "^0.15.3",
    "typescript": "^3.7.3",
    "xhr-mock": "^2.5.1"
  },
  "dependencies": {
    "cropperjs": "^1.5.6",
    "es6-promise": "^4.2.8",
    "focus-trap": "^5.1.0",
    "mitt": "^1.2.0",
    "whatwg-fetch": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && git add ."
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "automock": false,
    "setupFiles": [
      "./tests/mocks.ts"
    ]
  }
}
